{% extends 'base.html.twig' %}
{% block title %}Création d'une annonce{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        <h1>Créer une nouvelle annonce</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Créer une annonce</button>
        {{ form_end(form) }}


    </div>
{% endblock %}
{% block _ad_images_widget %}

    {{ form_widget(form) }}
    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary mb-3">Ajouter une image</button>
    </div>
{% endblock %}

{% block _ad_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_images_entry_widget %}
    <div class="form-group" >
        <div class="row">
            <div class="col">{{ form_widget(form.url) }}</div>
            <div class="col">{{ form_widget(form.caption) }}</div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        let addImages = document.querySelector('#add-image');
        let imagesContainer = document.querySelector('#ad_images')
        addImages.addEventListener('click', () => {
            const index = imagesContainer.getElementsByClassName('form-group').length;
            imagesContainer.innerHTML += (imagesContainer.dataset.prototype).replace(/__name__/g, index);
        })
    </script>
{% endblock %}
